.bookshelf{
    width: 100%;
    height: 100%;
}
.container{
    width: 100%;
    white-space: nowrap;
    padding: 0;
}
.bookcontainer{
  display: inline-block;
  width: 100%;
  height: 100%;
  padding: 0 auto;
}
.index{
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    border: 1rpx solid gray;
    position: relative;
    left: 50%;
    margin-left: -24rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.book{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 600rpx;
    height: 840rpx;
    border: 1px solid gray;
    border-radius: 5rpx;
    margin: 0 auto;
    overflow: hidden;
}
image{
    width: 350rpx;
    height: 497rpx;
}
.name{
    font-size: 18px;
    font: bold;
}

.pages-price{
    flex-direction: row;
    justify-content: space-between;
    width: 600rpx;
    font-size: 24rpx;
    text-align: center;
    margin-top: 24rpx;
}

.author, .pubdate, .press{
    font-size: 24rpx;
    text-align: center;
    display: block;
    margin-top: 24rpx;
}

.price{
    margin-left: 24rpx;
}
