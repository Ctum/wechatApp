/* pages/scan/scan.wxss */
.tips{
  display: block;
  text-align: center;
  color: gray;
  font: 0.8em;
}
.scaner{
  position: absolute;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: center;
}
@keyframes updown{
  from{
    transform: translateY(0rpx)
  }
  20%{
    transform: translateY(-10rpx)
  }
  40%{
    transform: translateY(-20rpx)
  }
  60%{
    transform: translateY(-10rpx)
  }
  80%{
    transform: translateY(10rpx)
  }
  100%{
    transform: translateY(0rpx)
  }
}
.scanCircle{
  width: 200rpx;
  height: 200rpx;
  line-height: 200rpx;
  border-radius: 50%;
  background: greenyellow;
  color: white;
  text-align: center;
  display: inline-block;
  animation-duration: 3s;
  animation-name: updown;
  animation-iteration-count: infinite;
}
.handin{
  font-size: 28rpx;
  color: #666666;
  border: 2rpx solid #999999;
  border-radius: 8rpx;
  line-height: 44rpx;
  margin-top: 8px;
  padding:4px 4px;
  margin-right: 40rpx;
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
}

.scanImage image{
  width: 750rpx;
  height: 380rpx;
}
