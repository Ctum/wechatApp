<!--pages/typeIn/typeIn.wxml-->
<form name="bookInfo" bindsubmit="getValue">
    <view class="typeList">
        <text class="item">书名</text>
        <input type="text" name="bookName"/>
    </view>
    <view class="typeList">
        <text class="item">作者</text>
        <input type="text" name="author" />
    </view>
    <view class="typeList">
        <text class="item">出版社</text>
        <input type="text" name="press"/>
    </view>
    <view class="typeList">
        <text class="item">出版日期</text>
        <input type="text" name="pubdate"/>
    </view>
    <view class="typeList">
        <text class="item">页数</text>
        <input type="number" name="pages"/>
    </view>
    <view class="typeList">
        <text class="item">定价</text>
        <input type="digit" name="prices"/>
    </view>
    <view class="typeList">
        <text class="item">ISBN</text>
        <input type="number" name="prices"/>
    </view>
    <button class="submitbtn" type="default" form-type="submit" >
        保存
    </button>
</form>