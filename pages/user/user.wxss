/* pages/user/user.wxss */
.container{
    display: flex;
    align-items: flex-start;
    flex-direction: column;
    width: 750rpx;
}
.userInfo{
    display: flex;
    flex-wrap: nowrap;
    flex-direction: row;
    border-top: 1rpx solid #aaa;
    border-bottom: 1rpx solid #aaa;
    width: 100%;
    background-color: #409eff;
    padding: 24rpx 0;
}

.avatar{
    width: 128rpx;
    height: 128rpx;
    margin: 0 24rpx;
    border-radius: 50%;
}
.info{
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.nickname{
    font-size: 36rpx;
}
.region{
    margin-top: 24rpx;
    color: #aaa;
}
.about-book{
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    width: 100%;
    height: 128rpx;
    border-bottom: 1rpx solid #ebeef5;
}
.book-account{
    border-right: 1rpx solid #ebeef5;
    width: 50%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.info-box{
    width: 48rpx;
    text-align: center;
    color: #909399;
}
.total{
    color:#67c23a;
    font-size: 36rpx;
}
.sell{
    color: #E04B0B;
    font-size: 36rpx;
}
.sell-box{
    margin-top: 64rpx;
    border-top: 1rpx solid #ebeef5; 
    border-bottom: 1rpx solid #ebeef5;
    font-size: 32rpx;
    width: 100%;
}
.sellold{
    height: 80rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.box-list{
    border-bottom: 1rpx solid #ebeef5;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.box-list1{
    border-bottom: 0rpx solid #ebeef5;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.arrow{
    width: 6rpx;
    height: 10rpx;
    margin-right: 12rpx;
}
.sell-box image{
    width: 35rpx;
    height: 40rpx;
    margin: 20rpx;
}