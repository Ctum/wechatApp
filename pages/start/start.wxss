.container{
    width: 100%;
    height: 100%;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
}
.remind-box {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-bottom: 300rpx;
}
.remind-img {
    width: 250rpx;
    height: 250rpx;
    padding-bottom: 25rpx;
}
.content{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.hello{
    font-size: 32rpx;
    margin-top: 100rpx;
    text-align: center;
}
.motto{
    overflow: hidden;
    display: block;
    text-align: center;
    font-size: 48rpx;
}
.logo{
    margin-top: 100rpx;
    overflow: hidden;
    display: block;
    width: 256rpx;
    height: 256rpx;
    border-radius: 50%;
}
.confirm-btn {
    margin-top: 100rpx;
    font-size: 13pt;
    line-height: 85rpx;
    height: 85rpx;
    width: 500rpx;
    background: #69C3AA;
    color: #fff;
    text-align: center;
    border-radius: 100rpx;
  }
.confirm-btn:active {
    opacity: .8;
}